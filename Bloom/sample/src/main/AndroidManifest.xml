<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="me.samlss.bloom_demo">

    <application
        android:allowBackup="true"
        android:name=".App"
        android:label="@string/app_name"
        android:icon="@drawable/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".AnchorSampleActivity"/>

        <activity android:name=".ScaleSampleActivity"/>

        <activity android:name=".SkewSampleActivity"/>

        <activity android:name=".ShapeSampleActivity"/>

        <activity android:name=".AccelerationSampleActivity"/>

        <activity android:name=".RotationSampleActivity"/>

        <activity android:name=".FadeOutSampleActivity"/>

        <activity android:name=".RecyclerViewSampleActivity"/>

    </application>

</manifest>